<script>
    let count = 0

    function dec() {
        count--
        $render()
    }

    function inc() {
        count++
        $render()
    }
</script>

<div class="flex space-x-4">
    <button @click={dec} class="example">-</button>
    <p>Count: {count}</p>
    <button @click={inc}>+</button>
</div>
