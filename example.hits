<script>
    const { name } = $props

    const $state = {
        count: 0
    }

    function dec() {
        $state.count--
    }

    function inc() {
        $state.count++
    }
</script>

<div class="flex space-x-4">
    <button @click={dec} class="example">-</button>
    <p>{name}'s Count: {$state.count}</p>
    <button @click={inc}>+</button>
</div>
